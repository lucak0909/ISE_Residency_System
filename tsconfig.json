    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["vitest/globals"]  // âœ… THIS FIXES YOUR ERRORS
  },
  "include": ["src"]
}

